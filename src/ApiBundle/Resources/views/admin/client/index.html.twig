{% extends 'ApiBundle:admin:layout.html.twig' %}

{% block body_id 'admin_client_index' %}

{% block main %}
    <h1>{{ 'title.client_list'|trans }}</h1>

    <table class="table table-striped">
        <thead>
            <tr>
                <div class="item-actions">
                    <a href="{{ path('admin_client_new') }}" class="btn btn-sm btn-default">
                        {{ 'action.create_client'|trans }}
                    </a>
                </div>
            </tr>
            <tr>
                <th scope="col">{{ 'label.client_name'|trans }}</th>
                <th scope="col">{{ 'label.client_id'|trans }}</th>
                <th scope="col">{{ 'label.client_secret'|trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% for client in clients %}
            <tr>
                <td>{{ client.name }}</td>
                <td>{{ client.id }}_{{ client.randomid }}</td>
                <td>{{ client.secret }}</td>
                <td>
                    <div class="item-actions">
                        <a href="{{ path('admin_client_show', { id: client.id }) }}" class="btn btn-sm btn-default">
                            {{ 'action.show'|trans }}
                        </a>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td>{{ 'client.no_clients_found'|trans }}</td>
           </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
